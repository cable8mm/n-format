{
    "name": "cable8mm/n-format",
    "description": "Small NumberFormatter Extension Library",
    "keywords": [
        "number-formatter",
        "extension",
        "n-format",
        "tdd",
        "php"
    ],
    "type": "library",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "laravel/pint": "^1.0"
    },
    "suggest": {
        "laravel/pint": "Provides fixing all codes for coding style"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Lee",
            "email": "cable8mm@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cable8mm\\NFormat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cable8mm\\NFormat\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "./vendor/bin/phpunit tests",
        "lint": "./vendor/bin/pint",
        "inspect": "./vendor/bin/pint --test",
        "apidoc": "doctum.phar update doctum.php --output-format=github --no-ansi --no-progress"
    },
    "extra": {
        "laravel": {
            "aliases": {
                "NFormatHelper": "Cable8mm\\NFormat\\NFormat"
            }
        }
    }
}